<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.changos.photoshare.login.Login"
    android:background="@color/colorPrimary"
    android:orientation="vertical"
    android:paddingLeft="35dp"
    android:paddingRight="35dp"
    android:theme="@style/Theme.AppCompat.NoActionBar">

    <ProgressBar
        android:id="@+id/login_progressbar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:visibility="gone"/>

    <LinearLayout
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">


        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="217dp"
            app:srcCompat="@drawable/ic_jimmy" />

        <EditText
            android:id="@+id/emailRequest_editText"
            style="@style/text_style"
            android:hint="@string/email"
            android:textColorHint="@color/hintTextColorsito"
            android:inputType="textEmailAddress"
            android:textColor="@color/primaryTextColor" />

        <EditText
            android:id="@+id/passwordRequest_editText"
            style="@style/text_style"
            android:hint="@string/contrasena"
            android:textColorHint="@color/hintTextColorsito"
            android:inputType="textPassword"
            android:textColor="@color/primaryTextColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="horizontal">


            <Button
                android:id="@+id/login_btn"
                style="@style/btn_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="40dp"
                android:text="@string/btnRegister" />

        </LinearLayout>
        <TextView
            android:id="@+id/registerTextBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:layout_marginBottom="20dp"
            android:text="Register"
            android:onClick="registerClick"
            android:clickable="true"
            android:textAlignment="center" />

    </LinearLayout>
